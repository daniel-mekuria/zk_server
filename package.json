{
  "name": "zkteco-sync-server",
  "version": "1.0.0",
  "description": "ZKTeco device synchronization server for user and biometric data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "cp config.example .env && echo 'Created .env file. Please edit it with your database credentials.'",
    "init": "npm run setup && npm start",
    "migrate": "node migrate.js",
    "db:migrate": "node migrate.js",
    "monitor": "node scripts/monitor.js",
    "monitor:watch": "node scripts/monitor.js watch",
    "monitor:devices": "node scripts/monitor.js devices",
    "monitor:queue": "node scripts/monitor.js queue",
    "monitor:activity": "node scripts/monitor.js activity"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["zkteco", "biometric", "sync", "attendance"],
  "author": "",
  "license": "MIT"
} 